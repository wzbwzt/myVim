
{
  "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "Spacegray Eighties Dark",
    "workbench.activityBar.visible": true,
 "editor.renderWhitespace": "none",
  "editor.renderControlCharacters": true,
 "breadcrumbs.enabled": true,
    "window.menuBarVisibility": "toggle",
    "workbench.settings.openDefaultSettings": true,
    "window.enableMenuBarMnemonics": true,
 //"editor.fontFamily": "Fira Sans Book",
  "editor.formatOnSave": true,
  "php.suggest.basic": false,
  "[javascript]": {
    //"editor.defaultFormatter": "vscode.typescript-language-features"
    //"editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "markdown-pdf.executablePath": "C:\\Program Files (x86)\\Google\\Chrome\\Application\\chrome.exe",
  "terminal.integrated.shell.windows": "C:\\Windows\\System32\\cmd.exe",
  "php.validate.executablePath": "D:\\PHP\\php.exe",
  "php.executablePath": "D:\\PHP\\php.exe",
  "workbench.sideBar.location": "left",
  "beautify.language": {
    "js": {
      "type": ["json", "javascript"],
      "filename": [".jshintrc", ".jsbeautify"]
    },
    "css": ["css", "scss"],
    "html": ["html", "htm", "vue"]
  },
  "go.useLanguageServer": true,
  "go.goroot": "D:\\Go",
  "go.gopath": "D:\\go_project",
    "go.formatTool": "goimports",
   "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.statusBarColorControl": false,
   "vim.normalModeKeyBindingsNonRecursive": [
        // 按下leader键加r键，如果还未开始调试，则不进行调试，直接运行文件
        {
            "before": [
                "<leader>",
                "r",
            ],
            "commands": [
                "workbench.action.debug.run"
            ],
            "when": [
                "!inDebugMode"
            ],
        },
        // 按下leader键加r键，如果正在调试时，则重新运行文件（restart）
        {
            "before": [
                "<leader>",
                "r",
            ],
            "commands": [
                "workbench.action.debug.restart"
            ],
            "when": [
                "inDebugMode"
            ],
        },
        // 按下leader键加d键，开始调试
        {
            "before": [
                "<leader>",
                "d",
            ],
            "commands": [
                "workbench.action.debug.start"
            ]
        },
        // 按下leader键+w，保存当前文件
        {
            "before": [
                "<leader>",
                "w",
            ],
            "commands": [
                "workbench.action.files.save",
            ],
        },
        {
            "before": [
                "<C-n>"
            ],
            "commands": [
                ":nohl"
            ]
        }
    ],
    "vim.leader": "<space>",
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false
    },
"editor.quickSuggestions": null,
}
